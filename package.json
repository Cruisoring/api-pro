{
  "name": "api-pro",
  "version": "1.0.0",
  "description": "Prototype TypeScript project with strong-type based API development",
  "main": "index.js",
  "scripts": {
    "upgrade": "yarn upgrade -L",
    "prettier": "prettier --check  ./**/{src,test,lib}/**/*.{ts,tsx}",
    "prettier-fix": "prettier --write **/{src,test,lib}/**/*.{ts,tsx}",
    "lint": "eslint **/{src,test,lib}/**/*.{ts,tsx}",
    "lint-fix": "yarn eslint --fix **/{src,test,lib}/**/*.{ts,tsx}",
    "fix": "yarn prettier-fix && yarn lint-fix",
    "test": "jest"
  },
  "repository": "git+https://github.com/Cruisoring/api-pro.git",
  "keywords": [
    "API",
    "REST",
    "TypeScript",
    "strong-typed",
    "conversion"
  ],
  "author": "William JIANG",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/Cruisoring/api-pro/issues"
  },
  "homepage": "https://github.com/Cruisoring/api-pro#readme",
  "devDependencies": {
    "@types/jest": "^26.0.20",
    "@types/mocha": "^8.2.0",
    "@types/node": "^14.14.25",
    "@typescript-eslint/eslint-plugin": "^4.14.2",
    "@typescript-eslint/parser": "^4.14.2",
    "eslint": "^7.19.0",
    "eslint-config-prettier": "^7.2.0",
    "eslint-config-standard": "^16.0.2",
    "eslint-import-resolver-typescript": "^2.3.0",
    "eslint-plugin-import": "^2.22.1",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-prettier": "^3.3.1",
    "eslint-plugin-promise": "^4.2.1",
    "jest": "^26.4.1",
    "prettier": "^2.2.1",
    "ts-jest": "^26.4.1",
    "typescript": "^4.1.3"
  },
  "dependencies": {
    "lerna": "^3.22.1",
    "yarn": "^1.22.10"
  },
  "jest": {
    "transform": {
      ".(ts|tsx)": "<rootDir>/node_modules/ts-jest/preprocessor.js"
    },
    "testRegex": "(/test/.*.test.ts|\\.(test|spec))\\.(ts|tsx|js)$",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js"
    ]
  },
  "jest-junit": {
    "outputDirectory": "reports",
    "outputName": "alltest.xml",
    "uniqueOutputName": "false",
    "classNameTemplate": "{classname}-{title}",
    "titleTemplate": "{classname}-{title}",
    "ancestorSeparator": " â€º ",
    "usePathForSuiteName": "true",
    "includeConsoleOutput": "true",
    "includeShortConsoleOutput": "true"
  }
}
